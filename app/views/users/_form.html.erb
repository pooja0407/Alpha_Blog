<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @user, class:"shadow p-3 mb-3 bg-info rounded", local: true) do|f| %>
        <%= render 'shared/errors', obj: @user %>
        <div class="form-group row">
          <%= f.label :username, class:"col-2 col-form-label text-white" %> 
          <div class="col-10">
            <%= f.text_field :username, class:"form-control shadow rounded", placeholder: "Enter the username" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, class:"col-2 col-form-label text-white"%> 
          <div class="col-10">
            <%= f.text_field :email, class:"form-control shadow rounded", placeholder: "Enter your email" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class:"col-2 col-form-label text-white"%> 
          <div class="col-10">
            <%= f.password_field :password, class:"form-control shadow rounded", placeholder: "Enter your password" %>
          </div>
        </div>
        
        <div class="form-group row justify-content-center">
          <%= f.submit(@user.new_record? ? "Sign Up" : "Update Profile", class:"btn btn-outline-light btn-lg")%>
        </div>

      <% end %>
    </div>
  </div>
</div>